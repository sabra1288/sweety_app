<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.database.OrderDetail"
    android:background="@drawable/sweety_app_psd4">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="109dp"
        android:text="Contact Detail"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="158dp"
        android:text="First Name"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/fName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:textColor="@color/logo"
        android:background="#90ffffff"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fName"
        android:layout_alignStart="@+id/textView7"
        android:text="Phone Number"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/phoneN"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/fName"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="Phone Number"
        android:textColor="@color/logo"
        android:background="#90ffffff"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneN"
        android:layout_alignStart="@+id/textView7"
        android:text="Area"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/fName"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="Area"
        android:textColor="@color/logo"
        android:background="#90ffffff"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area"
        android:layout_alignStart="@+id/textView7"
        android:text="Location"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/fName"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="Location"
        android:textColor="@color/logo"
        android:background="#90ffffff"/>

    <Button
        android:id="@+id/b_continue"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="111dp"
        android:background="@drawable/button"
        android:text="Continue"
        android:textColor="#fff"
        android:textStyle="bold" />


</RelativeLayout>