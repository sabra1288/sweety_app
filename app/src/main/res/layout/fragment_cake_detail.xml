<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="359dp"
    android:layout_height="460dp"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_marginTop="30dp">


    <TextView
        android:id="@+id/x_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"

        android:background="@drawable/x"
        android:gravity="center"
        android:text="X"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/cake_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:src="@drawable/cake7" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Cake_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#fff"
        android:elevation="6dp"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        app:layout_anchor="@id/cake_image"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true" />

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="110dp"
        android:layout_alignStart="@+id/cake_image"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="26dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cakeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:text="TextView" />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView" />



        </LinearLayout>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/number_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            app:backGroundColor="@color/note_color"
            app:finalNumber="10"
            app:initialNumber="1"
            app:textSize="8dp"
            android:layout_gravity="bottom|center"
            >


        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    </android.support.v7.widget.CardView>


</RelativeLayout>