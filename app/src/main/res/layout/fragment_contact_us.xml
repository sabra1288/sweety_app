<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sweety_app_psd"
    android:orientation="vertical"

    >


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:text="Contact Us"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView


        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="-3dp"
        android:src="@drawable/ic_call_black_24dp" />

    <TextView

        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="158dp"

        android:layout_marginTop="193dp"
        android:layout_marginEnd="0dp"
        android:text="@string/_0096898519000"
        android:textColor="#292929"
        android:textSize="18dp"
        android:textStyle="bold" />


    <TextView

        android:id="@+id/c_email"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="188dp"
        android:layout_marginTop="253dp"
        android:text="@string/email"
        android:textColor="#292929"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="298dp"
        app:srcCompat="@drawable/ic_email_black_24dp"
        card_view:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/c_email"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginStart="6dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/whats" />

    <TextView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="222dp"
        android:text="@string/chat_with_us"
        android:textColor="#292929"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>







